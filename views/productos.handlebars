<h1>Productos</h1>
{{#if productos}}
<div class="cont-cards-prods">
    {{#each productos}}
    <div class="card">
        <div class="cont-img-prod">
            <img src={{thumbnail}} alt="">
        </div>
        <div class="info-prod">
            <div class="cont-name-prod">
                <h4>{{name}}</h4>
                <b> {{price}} </b>
            </div>
            <p>Envio gratis</p>
        </div>
        <div class="btn-agregar">
            <button id={{_id}} class="boton-comprar{{@index}}"> Agregar al carrito </button>
        </div>
    </div>
    {{/each}}
    {{else}}
    <h2>There're not products :(</h2>
    {{/if}}
</div>

<script src="/static/js/products.js"></script>
<script src="/static/js/carrito.js"></script>

